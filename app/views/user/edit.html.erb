<%= form_with model: @user, url: user_path, html: { class: 'needs-validation', novalidate: true } do |f| %>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h1>Edit User</h1>
            <div class="mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', required: true %>
              <div class="invalid-feedback">
                Please provide a name.
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :role, class: 'form-label' %>
              <%= f.select :role, User.roles.keys.map { |r| [r.humanize, r] }, {}, class: 'form-select', required: true %>
              <div class="invalid-feedback">
                Please select a role.
              </div>
            </div>

            <div>
              <%= f.submit 'Submit', class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
